<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{#each articles}}
            <div class="panel panel-primary">
                <div class="panel-heading row">
                    <div class="col-xs-9">
                        <h3 class="panel-title pull-left">{{this.title}}</h3>
                    </div>
                    <div class="col-xs-3">
                        <form action="/save" method="POST">
                            <input id="article-title" type="hidden" name="title" value="{{this.title}}">
                            <input id="article-link" type="hidden" name="link" value={{this.link}}>
                            <button type="submit" class="btn btn-default pull-right">SAVE ARTICLE</button>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12>">
                        <div class="panel-body">
                            <p>{{this.link}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>